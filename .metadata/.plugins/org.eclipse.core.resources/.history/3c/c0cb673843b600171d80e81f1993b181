import serial
import time

ser = serial.Serial('/dev/ttyACM0', 9600)
cmd = 0
while True:
    command = input("Type something..: (on/ off / bye )");
    if command =="on":
        print("The LED is on...")
        ser.write(format(cmd, 'b').encode())
    elif command =="off":
        print("The LED is off...")
        ser.write(format(cmd, 'b').encode())
    elif command =="bye":
        print("See You!...")
        break
    else:
        print("Sorry..type another thing..!")
    time.sleep(.2) 
    print(ser.readline())
    
# ser.close()
